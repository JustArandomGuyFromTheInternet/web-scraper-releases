{
  "name": "puppereet",
  "version": "1.0.0",
  "description": "מערכת סקרייפינג - Desktop application",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "clean": "rmdir /s /q chrome-data chrome-profile 2>nul || true"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/genai": "^1.29.0",
    "csv-parse": "^5.6.0",
    "dotenv": "^16.4.5",
    "googleapis": "^144.0.0",
    "jimp": "^1.6.0",
    "open": "^11.0.0",
    "puppeteer": "^23.9.0",
    "sharp": "^0.34.5",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.puppereet.app",
    "productName": "מערכת סקרייפינג",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!chrome-data/**",
      "!out_new/**",
      "!dist/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    }
  }
}
