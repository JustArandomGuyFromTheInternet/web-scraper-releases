{
  "name": "web-scraper",
  "version": "1.0.0",
  "description": "מערכת סקרייפינג - Desktop application",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "clean": "rmdir /s /q chrome-data chrome-profile 2>nul || true"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/genai": "^1.29.0",
    "csv-parse": "^5.6.0",
    "dotenv": "^16.4.5",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "googleapis": "^144.0.0",
    "jimp": "^1.6.0",
    "open": "^11.0.0",
    "puppeteer": "^23.9.0",
    "sharp": "^0.34.5",
    "ws": "^8.18.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.webscraper.app",
    "productName": "Web Scraper",
    "publish": {
      "provider": "github",
      "owner": "JustArandomGuyFromTheInternet",
      "repo": "Web-Scraper"
    },
    "directories": {
      "output": "dist"
    },
    "asarUnpack": [
      "src/**/*",
      "visual_engine/**/*",
      "*.mjs"
    ],
    "files": [
      "**/*",
      "!**/*.md",
      "!chrome-data/**",
      "!chrome-profile/**",
      "!out_new/**",
      "!dist/**",
      "!visual_engine/screen_shots/**"
    ],
    "extraResources": [
      {
        "from": "oauth_credentials.json",
        "to": "oauth_credentials.json",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "ICON-modified.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": false
    }
  }
}
